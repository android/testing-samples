<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin"
              tools:context=".MainActivity">

    <EditText android:id="@+id/edit_text_caller_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            android:hint="@string/type_a_phone_number"/>

    <Button android:id="@+id/button_call_number"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_dial_number"
            android:layout_gravity="center_horizontal"
            android:onClick="onCall"/>

    <Button android:id="@+id/button_pick_contact"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_pick_contact"
            android:layout_gravity="center_horizontal"
            android:onClick="onPickContact"/>

</LinearLayout>
